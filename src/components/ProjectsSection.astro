---

title: "Porfolio de adrianelhombre - Desarrollador y Programador Web"
description: "Contrata a adrian elhombre para crear tus aplicaciones web"

import { PROJECTS } from "../data/ProjectsData.astro";
import Enlace from "./icons/Enlace.astro";
import GitHub from "./stack/GitHub.astro";

---

<section
  class="w-full mt-8 p-0 grid grid-cols-10 auto-rows-[30rem] gap-6 mx-auto"
>
{
  Object.values(PROJECTS).map(({ title, description, link, github, image, tags, columns }) => (
  <article
    class={`col-span-10 lg:col-span-${columns} relative rounded-xl backdrop-blur-md border border-white/10 shadow-inner shadow-black/10 overflow-hidden group`}
  >
    <div
      class="absolute bottom-0 top-0 z-10 h-full w-full bg-gradient-to-b from-transparent from-40% via-[#000]/50 to-[#000]/80"
    >
    </div>

    <div
      class="transition-scale absolute bottom-0 left-0 top-0-z-10 h-full w-full bg-black-950 bg-cover bg-center bg-no-repeat opacity-90 bg-blend-luminosity duration-1000 ease-in-out group-hover:scale-110"
      style={`background-image: url(${image})`}
    >
    </div>

    <div
      class="relative z-20 flex h-full select-none flex-col justify-end gap-1 p-2 text-lg md:p-6"
    >
      <h2
        class="mb-2 text-balance text-xl font-bold uppercase text-yellow-200"
      >
        {title}
      </h2>
      <p class="max-w-xl text-base md:text-md text-white">
        {description}
      </p>

      

      <div class="flex justify-between items-center mt-4">
        <div class="flex gap-x-1 justify-start items-center">
        <ul class="flex flex-row">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs px-2 `}
                  >
                    <tag.icon class="size-10" />
                  </span>
                </li>
              ))}
            </ul>
        </div>

        <span
          class="overflow-hidden rounded-sm border bg-white/80 shadow-sm flex items-center justify-center"
        >
          {link && (
            <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block border-e p-2 text-gray-700 hover:bg-white focus:relative"
          >
            <Enlace />
          </a>
          )}

          {github && (
            <a
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block border-e p-2 text-gray-700 hover:bg-white focus:relative"
          >
            <GitHub class="size-5" />
          </a>
          )}
          
        </span>
      </div>

    </div>
  </article>
  ))
}

</section>
